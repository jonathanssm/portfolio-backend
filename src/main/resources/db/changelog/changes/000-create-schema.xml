<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="1" author="jonathanssm" >
        <preConditions onFail="MARK_RAN">
            <not>
                <sqlCheck expectedResult="1">
                    SELECT COUNT(*) FROM information_schema.schemata WHERE schema_name = 'portfolio'
                </sqlCheck>
            </not>
        </preConditions>
        <sql>CREATE SCHEMA portfolio</sql>
    </changeSet>

    <changeSet id="2" author="jonathanssm">
        <preConditions onFail="MARK_RAN">
            <not>
                <sqlCheck expectedResult="1">
                    SELECT COUNT(*) FROM information_schema.schemata WHERE schema_name = 'portfolio_aud'
                </sqlCheck>
            </not>
        </preConditions>
        <sql>CREATE SCHEMA portfolio_aud</sql>
    </changeSet>
</databaseChangeLog>
